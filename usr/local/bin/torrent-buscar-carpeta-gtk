#!/bin/bash
#
#	busca peliculas por nombre
#
TITULO=$(zenity --entry --entry-text=buscar --text="Â¿Que pelicula queres ver?" | sed 's/,\|\./ /g; s/[^a-zA-Z0-9\ \-]//g')
[ "$TITULO" == "" ] && exit
TEMP="/tmp/Buscar/$TITULO"
mkdir -p "$TEMP" 2> /dev/null

echo "[Desktop Entry]
Version=1.0
Name=Buscando...
Comment=Espere por favor
Icon=gnome-do
StartupNotify=true
Type=Application" > "$TEMP/espera.desktop"

xdg-open "$TEMP" && torrent-buscar-carpeta " " "$TITULO" "$TEMP"
rm "$TEMP/espera.desktop"
