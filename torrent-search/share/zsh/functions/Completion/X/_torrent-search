#compdef torrent-search

_arguments \
  '(--help -h)'{-h,--help}'[show help]' \
  '(--version -v)'{-v,--version}'[show version]' \
  '--no-plugins-check [do not check for new plugins]' \
  '(-s --search)'{-s,--search=}'[search for pattern on startup]:*:search' \
  '--share-dir=[specify share folder path]:share_dir folder:_files -/' \
  '--add-plugin=[add a plugin from a custom path]:add_plugin folder:_files -/' \
